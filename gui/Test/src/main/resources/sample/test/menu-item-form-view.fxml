                </ImageView>
                <Label layoutX="92.0" layoutY="37.0" text="Add new item">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="92.0" layoutY="114.0" text="Name">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="itemNameTextField" layoutX="92.0" layoutY="134.0" prefHeight="25.0" prefWidth="336.0" promptText="Name" styleClass="textField" />
        <Label layoutX="92.0" layoutY="176.0" text="Description">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="93.0" layoutY="288.0" text="Price">
            <font>
                <Font name="System Bold" size="14.0" />
