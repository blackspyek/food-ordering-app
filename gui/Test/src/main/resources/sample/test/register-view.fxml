         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="92.0" layoutY="408.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="25.0" prefWidth="336.0" styleClass="buttons" text="Close">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label fx:id="registrationMessageLabel" alignment="CENTER" layoutY="316.0" prefHeight="18.0" prefWidth="520.0" textFill="#f81414">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="confirmPasswordLabel" alignment="CENTER" layoutX="230.0" layoutY="241.0" prefHeight="18.0" prefWidth="198.0" textFill="#f81414">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </children>
</AnchorPane>